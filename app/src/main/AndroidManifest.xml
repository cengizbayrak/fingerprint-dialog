<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.kevalpatel2106.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name="com.cengizb.sample.SecureActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.cengizb.sample.AuthenticationSuccessActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name="com.cengizb.sample.AuthenticationFailActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name="com.cengizb.sample.PinAuthenticationActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
    </application>

</manifest>
